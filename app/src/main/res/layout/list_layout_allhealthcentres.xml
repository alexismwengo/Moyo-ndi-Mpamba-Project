<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="5dp">

        <RelativeLayout
            android:background="@drawable/rectangle_background"
            android:id="@+id/first_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_alignBaseline="@+id/second_layout"
            android:gravity="center">

            <RelativeLayout
                android:background="@drawable/rectangle_background"
                android:id="@+id/first_layouta"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="4dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_business1" />
            </RelativeLayout>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/second_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/first_layout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/hospital_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#333"
                    app:fontFamily="sans-serif-medium" />
                <TextView
                    android:id="@+id/hospital_days_open"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:textColor="#333"
                    app:fontFamily="sans-serif-smallcaps"/>

                <TextView
                    android:id="@+id/hospital_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:textColor="#333"
                    android:fontFamily="sans-serif-smallcaps" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
