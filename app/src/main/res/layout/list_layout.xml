<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/app_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="appointment_id"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <TextView
                    android:id="@+id/app_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/app_id"
                    android:layout_marginLeft="10dp"
                    android:textColor="#333"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rectangle_background">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/booking_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking title"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_local_offer"
                        android:drawablePadding="3dp"
                        app:fontFamily="sans-serif-light"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/booked_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_access_time"
                        android:drawablePadding="3dp"
                        android:layout_centerInParent="true"
                        app:fontFamily="sans-serif-light"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/booking_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="date"
                        android:padding="3dp"
                        android:drawableLeft="@drawable/ic_date"
                        android:drawablePadding="3dp"
                        app:fontFamily="sans-serif-light"
                        android:layout_marginLeft="5dp"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Doctor details"
                    app:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:padding="6dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/booked_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doc Name"
                        android:layout_alignParentLeft="true"
                        android:drawableLeft="@drawable/ic_person2"
                        android:drawablePadding="3dp"
                        android:fontFamily="sans-serif-light"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/booked_doc_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doc address"
                        android:drawableLeft="@drawable/ic_location2"
                        android:drawablePadding="3dp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="sans-serif-light"
                        android:padding="3dp"
                        android:layout_marginLeft="5dp"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Details"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:padding="6dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient age"
                        android:fontFamily="sans-serif-light"
                        android:layout_alignParentLeft="true"
                        android:padding="3dp"/>
                    <TextView
                        android:id="@+id/patientphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient phone"
                        android:fontFamily="sans-serif-light"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="7dp"
                        android:drawablePadding="3dp"
                        android:drawableLeft="@drawable/ic_phone2"
                        android:padding="3dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/patientaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Patient Address"
                            android:drawableLeft="@drawable/ic_location2"
                            android:drawablePadding="3dp"
                            android:fontFamily="sans-serif-light"
                            android:padding="3dp"/>
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"/>

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <TextView
                    android:id="@+id/delete_appointment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_delete"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/cancel_appointment"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:layout_toLeftOf="@id/delete_appointment"
                    android:layout_marginRight="25dp"
                    android:text="CANCEL APPOINTMENT"
                    android:textColor="#333"
                    android:background="@null"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
